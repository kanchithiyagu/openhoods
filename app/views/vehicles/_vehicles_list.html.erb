
<% @vehicles.each do |vehicle| %>
<div class = "span12">
  <div class="span4 pull-left">
    <%=link_to (image_tag vehicle.avatar.url(:medium)), vehicle_path(vehicle)%>
  </div>
  <div class="span8">
    <h4><%=link_to vehicle.title,vehicle_path(vehicle), :class=> "red"%></h4>
    <%if is_favorite(current_user, vehicle) %>
      <%= link_to 'Remove Favorite',remove_favo_path(:id => Favorite.find_by_vehicle_id(vehicle.id).id)rescue nil%>
    <%else%>
      <%= link_to 'Add Favorite',  favo_path(:id => vehicle.id) %>
    <%end%>
      <%= truncate(vehicle.note, :length => 130, :omission => '... ') %>
      <%= link_to " more info...", vehicle_path(vehicle) %>
  </div>
</div>
<hr style="width:100%;margin:0px" >

<%end%>
