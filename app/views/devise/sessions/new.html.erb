<div class="login_container">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :id => "session_form") do |f| %>
    <div class='title'>Sign in</div>
      <%= render 'layouts/messages' %>
      <%= render 'layouts/errormessage'%>

    <div class='content'>
      <div class="formRow">
        <div class="input-prepend">
          <span class="add-on" title='Email'>@</span>
          <%= f.email_field :email,
              {:maxlength => 100, :value => params[:email], :placeholder=> 'Your email', :autocomplete => 'off'} %>
        </div>
      </div>

      <div class="formRow">
        <div class="input-prepend">
          <span class="add-on"><i class="icon-lock"  title='Password'></i></span>
          <%= f.password_field :password, {:maxlength => 50, :placeholder => 'Password', :autocomplete => 'off'} %>
        </div>
      </div>
    </div>

    <div class="signin-bar clearfix">
      <% if flash[:alert] == 'You are Blocked!.Email sent to your email Address' %>
      <button class="btn btn-inverse " type="submit" disabled="disabled">Sign In</button>
      <% else %>
      <button class="btn btn-inverse " id="login_btn" type="submit">Sign In</button>
      <% end %>
      <span class='pull-right'><%= link_to 'Reset My Password', "/users/password/new" %></span>
    </div>
  <% end %>
</div>

<%= javascript_include_tag "sessions.js" %>
