<div class="login_container">
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put,:id => "session_form" }) do |f| %>
  <%= f.hidden_field :reset_password_token %>

    <div class='title'>Reset My password</div>
    <%= render 'layouts/messages' %>
    <%= render 'layouts/errormessage'%>
    <div class='content'>

      <div class="formRow">
        <div class="input-prepend">
          <span class="add-on"><i class="icon-lock"  title='Password'></i></span>
          <%= f.password_field :password, {:maxlength => 50, :placeholder => 'Password'} %>
        </div>
      </div>

      <div class="formRow">
        <div class="input-prepend">
          <span class="add-on"><i class="icon-lock"  title='Password Confirmation'></i></span>
          <%= f.password_field :password_confirmation, {:maxlength => 50, :placeholder => 'Password Confirmation'} %>
        </div>
      </div>
    </div>

    <div class="signin-bar clearfix">
      <button class="btn btn-inverse " id="updatepassword_btn" type="submit">Update password</button>
      <span class='pull-right'><%= link_to 'Back to login', '/' %></span>
    </div>
  <% end %>
</div>

<%= javascript_include_tag "sessions.js" %>
